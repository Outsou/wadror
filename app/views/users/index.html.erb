<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

  <lu class="list-group">
    <% @users.each do |user| %>
        <li class="list-group-item">
          <%= link_to user.username, user %>
          <% if current_user.admin? and user.banned?  %>
              <span class="label label-info">frozen</span>
          <% end %>
        </li>
    <% end %>
  </lu>

<br>

