<h1>Listing breweries</h1>

<p> Number of breweries: <%= @breweries.count %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
      <table class="table table-hover">
        <% @breweries.each do |brewery| %>
              <tr>
                <td><%= link_to brewery.name, brewery %></td>
                <td><%= brewery.year %></td>
                <td><%= link_to 'Edit', edit_brewery_path(brewery) %></td>
                <td><%= link_to 'Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
              </tr>
        <% end %>
      </table>
  </tbody>
</table>

<br>
<div class="btn-group" role="group">
    <%= link_to 'New Brewery', new_brewery_path, class:"btn btn-primary" %>
    <%= link_to 'List of beers', beers_path, class:"btn btn-primary" %>
</div>
